    "ERR_NO_BODYPART": false,
    "LOOK_CONSTRUCTION_SITES": false,
    "LOOK_STRUCTURES": false,
    "LOOK_FLAGS": false,
    "LOOK_TERRAIN": false,
    "BODYPART_COST": false,
    "CREEP_LIFE_TIME": false,
    "LOOK_CREEPS": false,
    "Creep": false,
    "Flag": false,
    "Game": false,
    "Mineral": false,
    "OwnedStructure": false,
    "Resource": false,
    "Room": false,
    "RoomObject": false,
