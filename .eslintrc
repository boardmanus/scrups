{
  "extends": "google",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true,
  },
  "plugins": [
    "chai-expect"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["src", "node_modules", "lib/screeps", "lib/screeps/Structures", "lib/screeps/Global" ]
      }
    }
  },
  "rules": {
    "no-console": "off",
    "no-multiple-empty-lines": "off",
    "linebreak-style": "off",
    "no-param-reassign": ["error", { "props": false }],
    "max-len": ["error", 88, { "ignorePattern": "^\\s*console.log|^\\s*`.*`\\s*|^\\s*throw new" }],
  },
  "globals": {
    "chai": true,
    "_": false,
    "CONTROLLER_DOWNGRADE": false,
    "COLOR_RED": false,
    "COLOR_BLUE": false,
    "FIND_MY_CONSTRUCTION_SITES": false,
    "OK": false,
    "ERR_NOT_IN_RANGE": false,
    "ERR_NO_PATH": false,
    "ERR_NOT_OWNER": false,
